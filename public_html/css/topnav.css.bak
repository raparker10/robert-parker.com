ul.saftopnav {
    list-style-type: none;
     margin:0;
     padding: 0;
     background-color: lightgray;
     border: 1px solid #555;
     overflow: hidden;
     background-color: #333;
}            
ul.saftopnav li {
    float: left;
}
ul.saftopnav li a {
    display: block;
    color:white;
    padding: 0.5em 0.5em;
    text-align: center;
    text-decoration: none;
}
ul.saftopnav li a:hover:not(.active) {
    background-color: #111;
}

ul.saftopnav li a.active {
    background-color: #04aa6d;
}
ul.saftopnav li.right {
    float: right;
}
@media screen and (max-width: 600px) {
    ul.saftopnav li.right, ul.saftopnav li {float:none;}
}
